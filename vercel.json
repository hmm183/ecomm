// vercel.json
{
  "version": 2,
  "name": "your-ecommerce-app",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "npm install --prefix client && npm install --prefix server",
  "buildCommand": "echo \"--- Starting client build ---\" && npm run build --prefix client && echo \"--- Client build finished. Moving files... ---\" && rm -rf server/public && mv client/build server/public && echo \"--- Build artifacts moved to server/public ---\""
}
